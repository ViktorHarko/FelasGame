shader_type canvas_item;

// Параметр, який ми будемо змінювати через C# код
uniform float bend : hint_range(-1.0, 1.0) = 0.0;

void vertex() {
	// (1.0 - UV.y) означає: 
	// Верх картинки (UV.y = 0) -> множник 1 (максимальний рух)
	// Низ картинки (UV.y = 1) -> множник 0 (стоїть на місці)
	VERTEX.x += bend * (1.0 - UV.y) * 10.0; // 10.0 - це сила вигину
}